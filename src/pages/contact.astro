<style>

.contact-form {
    width: 100%;
    margin-top: 2rem;
}
.contact-form .input-field {
    width: 100%;
    margin-bottom: 1.5rem;
}
.contact-form .input-field input,
.contact-form .input-field textarea {
    width: 100%;
    background-color: rgb(240, 240, 240);
    border-radius: 3px;
    padding: .5rem 1rem;
    border: none;
    outline: none;
    font-family: inherit;
    font-size: inherit;
    resize: none;
    border: 2px solid transparent;
    transition: .2s;
}
.contact-form .input-field input:focus, 
.contact-form .input-field textarea:focus, 
.contact-form .input-field textarea:valid,
.contact-form .input-field input:valid {
    border: 2px solid #E2B210;
}

.contact-form label {
    display: block;
    padding-left: 1rem;
    margin-bottom: .5rem;
}



/* Contact information */
.contact-list {
    margin: 2rem 0;
    list-style: none;

}
.contact-list .contact-item {
    display: flex;
    gap: 2rem;
    margin-bottom: 2rem;

}
.contact-list .contact-item:hover > .contact-link:hover {
    background-color: #E2B210;
}
.contact-list .contact-link {
    display: flex;
    width: 3rem;
    height: 3rem;
    border-radius: 50%;
    background-color: lightgray;
    align-items: center;
    justify-content: center;
    transition: .4s;

}
.contact-list h3 {
    font-weight: bold;
    font-size: 0.8rem;
}

</style>